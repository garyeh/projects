<h2>Cat Rental Request Form</h2>
<form action='/cat_rental_requests' method='post'>

  <label for='cat_id'>Select a Cat</label>
  <select id='cat_id' name='cat_rental_request[cat_id]'>
  <% @cats.each do |cat| %>
  <option value='<%= cat.id %>'><%= cat.name %></option>
  <% end %>
  </select>

  <br />
  <br />

  <label for='start_date'>Start Date</label>
  <input id='start_date' name='cat_rental_request[start_date]' type='date' />

  <label for='end_date'>End Date</label>
  <input id='end_date' name='cat_rental_request[end_date]' type='date' />

  <br />
  <br />

  <input type="submit" value="Submit Request">
</form>
